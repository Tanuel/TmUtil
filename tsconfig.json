{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "target": "ES5",
    "declaration": true,
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "typedocOptions": {
    "mode": "file",
    "out": "public",
    "readme": "Readme.md",
    "excludeNotExported": true,
    "excludePrivate": true,
    "excludeExternals": true
  }
}